<Window x:Class="CW1.Certificate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW1"
        mc:Ignorable="d"
        Title="Certificate" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtCertificate" HorizontalAlignment="Left" Height="195" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Height="25" Margin="100,224,0,0" VerticalAlignment="Top" Width="100" Click="btnClose_Click"/>

    </Grid>
</Window>
